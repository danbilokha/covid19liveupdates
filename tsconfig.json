{
  "files": [
    "server/src/index.ts"
  ],
  "include": [
    "server/**/*.ts"
  ],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "rootDir": "./",
    "sourceMap": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "removeComments": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "*": [
        "node_modules/@types/*",
        "./server/types/*"
      ]
    }
  }
}
